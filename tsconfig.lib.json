{
	"compilerOptions": {
		"module": "CommonJS",
		"declaration": true,
		"removeComments": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"target": "ES2017",
		"strict": true,
		"lib": ["ES2017"],
		"outDir": ".",
		"esModuleInterop": true
	},
	"exclude": ["/**/*.spec.ts", "/*.spec.ts", "tests", "*/tests", "global-setup.ts", "jest.config.ts"],
	"include": ["lib"]
}
